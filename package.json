{
  "name": "whocraft-launcher",
  "version": "1.0.1",
  "description": "Launcher Minecraft Whocraft",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "pack": "electron-packager . WhoCraftLauncher --platform=win32 --arch=x64 --out=dist --overwrite"
  },
  "keywords": [],
  "author": "Manasei",
  "license": "ISC",
  "type": "commonjs",
  "devDependencies": {
    "electron": "^39.2.7",
    "electron-builder": "^26.4.0",
    "electron-packager": "^17.1.2",
    "electron-updater": "^6.7.3"
  },
  "dependencies": {
    "minecraft-launcher-core": "^3.18.2",
    "msmc": "^5.0.5",
    "prismarine-nbt": "^2.8.0",
    "ws": "^8.19.0"
  },

"build": {
  "appId": "whocraft.launcher",
  "productName": "Whocraft Launcher",
  "asar": true,

  "files": [
    "**/*",
    "!node_modules",
    "!node_modules/**/*",
    "!.git",
    "!dist",
    "!package-lock.json",
    "!config/admin.json",
    "!launcher-data/runtime/java/**/*"
  ],

  "extraResources": [
    {
      "from": "launcher-data/runtime/java",
      "to": "launcher-data/runtime/java"
    }
  ],

  "directories": {
    "output": "dist"
  },

  "win": {
    "target": "nsis",
    "icon": "icon.ico"
  },

  "nsis": {
    "oneClick": false,
    "perMachine": false,
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true
  },

  "publish": [
    {
      "provider": "github",
      "owner": "Manasei",
      "repo": "whocraft-launcher"
    }
  ]
}}